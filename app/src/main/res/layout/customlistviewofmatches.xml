<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/MatchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Team1Name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="TextView"
        android:textSize="13sp"
        android:maxWidth="100dp"
        android:layout_alignBaseline="@+id/MatchTime"
        android:layout_alignBottom="@+id/MatchTime"
        android:layout_toRightOf="@+id/MatchTime"
        android:layout_toEndOf="@+id/MatchTime" />

    <TextView
        android:id="@+id/Team2Name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Team1Name"
        android:layout_alignBottom="@+id/Team1Name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="TextView"
        android:textSize="13sp" />

    <TextView
        android:maxWidth="100dp"
        android:id="@+id/VsText"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/Team1Name"
        android:layout_toRightOf="@+id/Team2Name"
        android:text="VS" />
</RelativeLayout>