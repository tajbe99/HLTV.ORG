<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/MatchTime"
        android:layout_width="82dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:clickable="false"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Team1Name"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxWidth="100dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/MatchTime"
        app:layout_constraintStart_toEndOf="@+id/team1_logo"
        app:layout_constraintTop_toTopOf="@+id/MatchTime" />

    <TextView
        android:id="@+id/Team2Name"
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/MatchTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/team2_logo"
        app:layout_constraintTop_toTopOf="@+id/MatchTime" />

    <TextView
        android:id="@+id/VsText"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxWidth="100dp"
        android:text="VS"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/Team1Name"
        app:layout_constraintStart_toEndOf="@+id/Team1Name"
        app:layout_constraintTop_toTopOf="@+id/Team1Name" />

    <TextView
        android:id="@+id/EventName"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_Logo"
        app:layout_constraintStart_toEndOf="@+id/event_Logo"
        app:layout_constraintTop_toTopOf="@+id/event_Logo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/event_Logo"
        android:layout_width="33dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MatchTime"
        app:srcCompat="@android:drawable/ic_menu_help" android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/team1_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/MatchTime"
        app:layout_constraintStart_toEndOf="@+id/MatchTime"
        app:layout_constraintTop_toTopOf="@+id/MatchTime"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <ImageView
        android:id="@+id/team2_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/MatchTime"
        app:layout_constraintStart_toEndOf="@+id/VsText"
        app:layout_constraintTop_toTopOf="@+id/MatchTime"
        app:srcCompat="@android:drawable/ic_menu_help" />
</android.support.constraint.ConstraintLayout>