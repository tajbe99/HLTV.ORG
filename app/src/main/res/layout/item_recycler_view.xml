<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="top"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <TextView
            android:id="@+id/m_time_match"
            android:layout_width="89dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/m_team1_cell_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/m_time_match"
            card_view:layout_constraintStart_toEndOf="@+id/m_time_match"
            card_view:layout_constraintTop_toTopOf="@+id/m_time_match" />

        <TextView
            android:id="@+id/m_event_match"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="18sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/m_time_match" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="VS"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/m_team1_cell_match"
            card_view:layout_constraintEnd_toStartOf="@+id/m_team2_cell"
            card_view:layout_constraintHorizontal_bias="0.51"
            card_view:layout_constraintStart_toEndOf="@+id/m_team1_cell_match"
            card_view:layout_constraintTop_toTopOf="@+id/m_team1_cell_match" />

        <TextView
            android:id="@+id/m_team2_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/m_time_match"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/m_time_match" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
